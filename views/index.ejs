<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Connexion / Inscription</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
    }
    .auth-container {
      max-width: 420px;
      width: 100%;
    }
    .spinner-border {
      width: 1rem;
      height: 1rem;
      border-width: 0.15em;
    }
  </style>
</head>
<body class="d-flex justify-content-center align-items-center vh-100">

  <div class="auth-container p-4 bg-white shadow rounded">
    <h3 class="text-center mb-4">Bienvenue sur le chat</h3>

    <% if (error) { %>
      <div class="alert alert-danger text-center"><%= error %></div>
    <% } %>

    <!-- Connexion -->
    <form action="/login" method="POST" class="mb-4" onsubmit="handleSubmit(this)">
      <h5>Connexion</h5>
      <div class="mb-2">
        <input type="text" name="username" class="form-control" placeholder="Nom d'utilisateur" required>
      </div>
      <div class="mb-2">
        <input type="password" name="password" class="form-control" placeholder="Mot de passe" required>
      </div>
      <button type="submit" class="btn btn-primary w-100 d-flex justify-content-center align-items-center">
        <span class="btn-text">Se connecter</span>
        <div class="spinner-border text-light ms-2 d-none" role="status"></div>
      </button>
    </form>

    <hr>

    <!-- Inscription -->
    <form action="/register" method="POST" onsubmit="handleSubmit(this)">
      <h5>Inscription</h5>
      <div class="mb-2">
        <input type="text" name="username" class="form-control" placeholder="Nom d'utilisateur" required>
      </div>
      <div class="mb-2">
        <input type="password" name="password" class="form-control" placeholder="Mot de passe" required>
      </div>
      <button type="submit" class="btn btn-success w-100 d-flex justify-content-center align-items-center">
        <span class="btn-text">S'inscrire</span>
        <div class="spinner-border text-light ms-2 d-none" role="status"></div>
      </button>
    </form>
  </div>

  <script>
    function handleSubmit(form) {
      const button = form.querySelector('button[type="submit"]');
      const text = button.querySelector('.btn-text');
      const spinner = button.querySelector('.spinner-border');

      button.disabled = true;
      text.textContent = 'Chargement...';
      spinner.classList.remove('d-none');
    }
  </script>
</body>
</html>
